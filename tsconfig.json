{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ]
  },

  "include": [
    "src/**/*.ts",
  ]
}
